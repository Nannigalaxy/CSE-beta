<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            app:layout_scrollFlags="scroll|enterAlways"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:backgroundTint="@color/White"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sem5"
                android:textSize="20sp"
                android:gravity="center"
                android:paddingStart="-70dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:paddingBottom="100dp">


                            <!--****    1st     **********-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:focusable="true"
                android:foreground="@drawable/ripple_effect_2"
                app:cardCornerRadius="5dp"
                >
            <RelativeLayout
                android:id="@+id/cs51btn"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:focusable="true"
                android:onClick="cs51button"
                android:clickable="true"
                android:paddingEnd="15dp">
                <View
                    style="@style/v_bar_blue"/>

                <TextView
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17CS51"
                    style="@style/code" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    style="@style/header_things"
                    android:text="@string/crd4" />

                <TextView
                    style="@style/name"
                    android:id="@+id/name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/code"
                    android:text="@string/cs51" />
                <TextView
                    style="@style/header_things"
                    android:id="@+id/idtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/core"
                    android:layout_below="@id/name"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="77dp"
                    android:layout_marginEnd="26dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/arrow_down" />

            </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="10dp"
                >
    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/cs51content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light"
        android:padding="16dp"
        app:ael_duration="300"
        app:ael_expanded="false"
        app:ael_interpolator="accelerate"
        app:ael_orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/cs51_content" />
    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
            </androidx.cardview.widget.CardView>



            <!--****    2st     **********-->


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="5dp"
                android:focusable="true"
                android:foreground="@drawable/ripple_effect_2"
                >
                <RelativeLayout
                    android:id="@+id/cs52btn"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:focusable="true"
                    android:onClick="cs52button"
                    android:clickable="true"
                    android:paddingEnd="16dp">
                    <View
                        style="@style/v_bar_blue"/>

                    <TextView
                        android:id="@+id/code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17CS52"
                        style="@style/code" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        style="@style/header_things"
                        android:text="@string/crd4" />

                    <TextView
                        style="@style/name"
                        android:id="@+id/name"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_below="@id/code"
                        android:text="@string/cs52" />

                    <TextView
                        style="@style/header_things"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name"
                        android:layout_marginTop="20dp"
                        android:text="@string/core" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/arrow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="77dp"
                        android:layout_marginEnd="26dp"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/arrow_down" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="10dp"
                >
                <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                    android:id="@+id/cs52content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light"
                    android:padding="16dp"
                    app:ael_duration="300"
                    app:ael_expanded="false"
                    app:ael_interpolator="accelerate"
                    app:ael_orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/cs52_content" />
                </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
            </androidx.cardview.widget.CardView>













            <!--  ###########################################    -->
<!--  *******************************************-->
        </LinearLayout>
    </ScrollView>


</LinearLayout>